<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.happinesstrivia.Question1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 1 of 10"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What area of the human brain is responsible for happiness and positive memories?"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radio_group_q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/button_amygdala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amygdala"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/button_cerebellum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerebellum"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/button_hippocampus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hippocampus"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/button_hypothalamus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hypothalamus"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/button_thalamus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thalamus"
                android:textSize="16sp" />

        </RadioGroup>

        <Button
            android:id="@+id/button_next_q1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Next"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>